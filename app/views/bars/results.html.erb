<h1>RESULTS</h1>

<hr>

<section class='results'>

<% if @search_results["businesses"].count == 0 %>
	<%= link_to "your search yielded no results. please try again", '/' %>
<% end %>	

<div class='resultsname'>
<% @search_results["businesses"].each do |bar| %></br>
<%= link_to bar['name'].titleize, bar["url"] %> </br>
</div>

<div class='resultsimg'>
<img src= "<%=bar["image_url"]%>"></br>
</div>

<% bar["location"]["display_address"].each do |address|%> <%= address %></br>
<% end %>

Rating: <img src= "<%=bar["rating_img_url_small"]%>"></br>

<% if session[:current_user_id] %>
	<%= form_tag "/users", :method => :put do  %>
		<%= hidden_field_tag :business_id, bar["id"] %>
		<%= submit_tag "SAVE THIS BAR" %>
	<% end %>			
<% end %>	
<hr>
<% end %>

</section>