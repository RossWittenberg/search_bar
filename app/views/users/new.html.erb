<h1>NEW USER</h1>

<% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>

<hr>

<section class ='form'>
<%= form_for @user do |f| %>
  <%= f.label :username %><br>
  <%= f.text_field :username %><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %><br>

  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %><br>

  <br><%= f.submit %>

</section>

<% end %>
