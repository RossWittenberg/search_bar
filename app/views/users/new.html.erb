<h1>NEW USER</h1>

<% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>

<hr>

<%= form_for @user do |f| %>

<div class='field'>
	<%= f.label :username %><br>
  <%= f.text_field :username %><br>

  <%= f.label :password %><br>
  <%= f.password_field :password %><br>

  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %><br>

  <br><%= f.submit %>
</div>

<% end %>
