/*LINKS*/
a:link {
  text-decoration: none;
  color: white;
  font-style: bold;
}

a:visited {
  text-decoration: none;
  color: white;
  font-style: bold;
}

a:hover {
  background: white;
  opacity: 0.8;
  font-style: bold;
  color: white;
}

