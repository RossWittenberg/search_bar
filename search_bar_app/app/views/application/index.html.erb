<% if session[:current_user_id] %>
  Welcome, <%= User.find(session[:current_user_id]).username %>
  <%= link_to "Log Out", sessions_path, method: :delete %>
<% else %>
	<%= link_to "Log In", login_path %> |
	<%= link_to "Sign Up", new_user_path %>
<% end %>


<%= form_for '/bars' do |f| %>
  <%= f.label :zip_code %><br>
  <%= f.text_field :zip_code %><br>
  <% if session[:current_user_id] %>
  <% User.find_by(session[:current_user_id].zip_codes.push[:zip_code])
  <br><%= f.submit 'Submit'%>
  <% end %>
  <% end %>


